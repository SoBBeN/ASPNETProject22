        <h4>Add Review</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ContractorID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ContractorID" class ="form-control" asp-items="ViewBag.ContractorID"></select>
            </div>
        </div>
        <input type="hidden" value="@ViewData["CustomerID"]" name="CustomerID" />
