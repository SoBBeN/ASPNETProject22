@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        @*<li data-target="#myCarousel" data-slide-to="3"></li>*@
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/slides/blueprint.jpg" alt="Blueprint" class="img-responsive" />
            <div class="caption-title">
                <div class="carousel-caption" role="option">
                    <p>
                        Find a contractor in your area
                    </p>
                    <p id="SearchButton" class="btn btn-default"><a asp-controller="Contractor" asp-action="Index" ><i class="glyphicon glyphicon-search"></i>&nbsp;Search</a></p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/images/slides/nutsbolts.jpg" alt="Nuts and bolts" class="img-responsive" />
            <div class="caption-title">
                <div class="carousel-caption" role="option">
                    <p>
                        Review contractors you've hired
                    </p>
                    <p id="SearchButton2" class="btn btn-default"><a asp-controller="Review" asp-action="Create"><i class="glyphicon glyphicon-upload"></i>&nbsp;Create Review</a></p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/images/slides/toolsbrown.jpg" alt="Tools" class="img-responsive" />
            <div class="caption-title">
                <div class="carousel-caption" role="option">
                    <p>
                        View other customers' reviews
                    </p>
                    <p id="SearchButton3" class="btn btn-default"><a asp-controller="Review" asp-action="Index"><i class="glyphicon glyphicon-search"></i>&nbsp;Past Review</a></p>
                </div>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

